# Multi-Platform AI Orchestration Configuration
# Copy this file to .env and set your actual values

# Google Gemini Configuration (Phase 1)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Google Generative AI Model Selection
# WARNING: Avoid deprecated model IDs like "text-bison-001" or "chat-bison-001"
# Current recommended models (as of 2024):
#   - gemini-1.5-flash (fast, efficient)
#   - gemini-1.5-pro (highest quality)
#   - gemini-1.0-pro (stable, reliable)
# TODO: Set this explicitly in production rather than relying on fallback
GOOGLE_GENAI_MODEL=gemini-1.5-flash

# Core AI Orchestration Configuration
AI_ORCHESTRATION_LOG_LEVEL=INFO
AI_ORCHESTRATION_MAX_TASKS=100
AI_ORCHESTRATION_ENABLE_EMERGENT=true

# FastAPI Server Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true

# Development Configuration
# Set to false in production
DEBUG=true

# Future Provider Configuration (Phase 2+)
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here
# HUGGINGFACE_API_TOKEN=your_hf_token_here

# Subscription Configuration (Existing System)
AI_ORCHESTRATION_SUBSCRIPTION_MODE=true
AI_ORCHESTRATION_BILLING_CYCLE_DAYS=30

# Agent Configuration (Existing System)  
AI_ORCHESTRATION_INITIAL_AGENTS=4
AI_ORCHESTRATION_MAX_AGENTS=50
AI_ORCHESTRATION_COORDINATION_STRATEGY=emergent_adaptive

# Intelligence Configuration (Existing System)
AI_ORCHESTRATION_PATTERN_CONFIDENCE=0.7
AI_ORCHESTRATION_LEARNING_RETENTION_DAYS=30
AI_ORCHESTRATION_MODEL_UPDATE_FREQUENCY=60